<link rel="stylesheet" href="/css/home.css" />
<h1>Codial</h1>
<section>
  <h4>Posts</h4>
  <% if (locals.user) { %>
  <form action="/posts/create" method="POST" id="post-form">
    <textarea
      name="content"
      id="content"
      cols="30"
      rows="3"
      required
      placeholder="type here..."
    ></textarea>
    <button type="submit">Post</button>
  </form>
  <% } %> <% if(locals.posts){ %>
  <div id="post-list">
    <ul>
      <% for(let post of locals.posts){ %> <%- include('_post', {post: post})
      -%> <% } %>
    </ul>
  </div>
  <% } %>
</section>
<section>
  <h4>Friends</h4>
  <div>
    <ul>
      <% for (let u of users) { %>
      <li>
        <a href="/users/profile/<%= u.id %>"><%= u.name %></a>
      </li>
      <% } %>
    </ul>
  </div>
</section>
